<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meidiaplayer.FrenchTeacherActivity"
    android:background="@drawable/french_teacher_bg">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:text="French Teacher Activity"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/f_t_btn_black"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        app:backgroundTint="@null"
        android:text="Black"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/f_t_btn_green"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        android:text="Green"
        android:textColor="#3ED92C"
        android:textSize="18sp"
        app:backgroundTint="@null"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_t_btn_black" />

    <Button
        android:id="@+id/f_t_btn_purple"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        android:text="Purple"
        android:textColor="#B832DC"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_t_btn_green"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/f_t_btn_red"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        android:text="Red"
        android:layout_marginTop="20dp"
        android:textColor="#DE0606"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_t_btn_purple" />

    <Button
        android:id="@+id/f_t_btn_yellow"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        android:text="Yellow"
        android:textColor="#ECC323"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_t_btn_red" />
</androidx.constraintlayout.widget.ConstraintLayout>