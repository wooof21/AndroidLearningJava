<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="employeeEmail"
            type="com.androidlearning.recyclerview.advanced.multipleviewtype.EmployeeWithEmail" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgMail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:src="@android:drawable/ic_dialog_email"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/adv_rv_multi_type_email_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="@{employeeEmail.empName}"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adv_rv_multi_type_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="@{employeeEmail.address}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="NSW" />

            <TextView
                android:id="@+id/adv_rv_multi_type_call_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="@{String.format(`Email: %s`, employeeEmail.email)}" />

        </LinearLayout>

    </LinearLayout>
</layout>